<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--设置按钮默认显示的图片-->
    <item  android:state_focused="false" android:state_pressed="false"
        android:drawable="@drawable/btn_demo1"/>
    <!--设置按钮按下显示的图片-->
    <item android:drawable="@drawable/btn_demo2" android:state_pressed="true"/>
    <!--设置按钮长按时显示的图片-->
    <item android:drawable="@drawable/btn_demo2" android:state_focused="true"/>

</selector>